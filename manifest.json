{
  "manifest_version": 3,
  "name": "Maps Button for Google Search",
  "version": "1.1.0",
  "description": "Adds a convenient button to open locations directly in Google Maps from Google Search results and business panels",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://*.google.com/search*", "*://*.google.de/search*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
